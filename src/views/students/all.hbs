<div class="container container--three-column-grid">
  {{#each students}}
    <a href="/students/{{id}}">
      <article class="user-card">
        <figure class="user-card__avatar-container">
          <img class="user-card__avatar" src="{{imageUrl}}" alt="user avatar" />
        </figure>
        <h3 class="user-card__name">{{firstName}} {{lastName}}</h3>
        <h4 class="user-card__username">{{id}}</h4>
      </article>
    </a>
  {{/each}}
  <form action="/students" method="POST">
    <label>First Name: <input type="text" name="firstName"></label>
    <label>Last Name: <input type="text" name="lastName"></label>
    <label>Image URL: <input type="text" name="imageUrl"></label>
    <button>Submit</button>
  </form>
</div>
